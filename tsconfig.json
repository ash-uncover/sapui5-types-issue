{
    "compilerOptions": {
        "allowJs": true,
        "baseUrl": "./",
        "composite": true,
        "module": "es2022",
        "moduleResolution": "node",
        "outDir": "dist/",
        "paths": {
            "ui5/typescript/helloworld/*": [
                "webapp/*"
            ]
        },
        "rootDir": "./webapp",
        "skipLibCheck": true,
        "strict": true,
        "strictPropertyInitialization": false,
        "target": "es2022",
    },
    "include": [
        "./webapp/**/*"
    ]
}